<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:id="@+id/label_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/im_profile_img"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/user_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_toEndOf="@+id/label_name"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_email"
            android:text="Email: "
            android:layout_toEndOf="@id/im_profile_img"
            android:textSize="18sp"
            android:layout_below="@id/label_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Email"
            android:id="@+id/User_email"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_below="@id/user_name"
            android:layout_toEndOf="@+id/label_email"/>
            android:textColor="@android:color/holo_blue_dark"/>
        <TextView
            android:id="@+id/user_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_below="@id/User_email"
            android:layout_toEndOf="@id/im_profile_img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@id/User_email"
            android:layout_toEndOf="@id/user_address_label"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="18sp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>