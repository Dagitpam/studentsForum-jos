<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUser">
    <ImageView
        android:id="@+id/iv_view_user_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_gender"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"/>

    <TextView
        android:id="@+id/tv_view_user_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@id/iv_view_user_img"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_view_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@id/iv_view_user_img"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_toEndOf="@+id/tv_view_user_name_label"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_view_user_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:layout_below="@+id/tv_view_user_name_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_view_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@id/tv_view_user_name"
        android:layout_toEndOf="@id/tv_view_user_email_label"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_view_user_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textColor="@android:color/black"
        android:layout_below="@id/tv_view_user_email_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_view_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:layout_below="@+id/tv_view_user_email"
        android:layout_toEndOf="@+id/tv_view_user_email_label"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"/>
    <TextView
        android:id="@+id/tv_view_user_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@id/tv_view_user_password_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_view_user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@+id/tv_view_user_password"
        android:layout_toEndOf="@+id/tv_view_user_password_label"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Gender: "
        android:id="@+id/tv_view_user_gender_label"
        android:layout_below="@id/tv_view_user_address_label"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_view_user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:layout_toEndOf="@id/tv_view_user_address_label"
        android:layout_below="@id/tv_view_user_address"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tv_view_user_state_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State: "
        android:layout_below="@id/tv_view_user_gender_label"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tv_view_user_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plateau"
        android:layout_below="@id/tv_view_user_gender"
        android:layout_toEndOf="@id/tv_view_user_state_label"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright"/>
    <TextView
        android:id="@+id/tv_view_user_track_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track: "
        android:layout_below="@id/tv_view_user_state_label"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/tv_view_user_tract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_view_user_state"
        android:text="Mobile"
        android:layout_toEndOf="@id/tv_view_user_track_label"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright"/>
    <Button
        android:id="@+id/bt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_view_user_track_label"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"/>
    <Button
        android:id="@+id/bt_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_update"
        android:text="Delete"
        android:textAllCaps="false"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"/>

</RelativeLayout>